{
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.python",
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "flake8.args": [
        "--max-line-length=119",
        "--ignore=E722,I201,I100,BLK100,W503",
        "--per-file-ignores=__init__.py:F401"
    ],
    "editor.formatOnSave": true,
    "black-formatter.args": [
        "--line-length=119"
    ],
    "editor.rulers": [
        119
    ],
    "C_Cpp.clang_format_style": "Microsoft",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
    "git.openRepositoryInParentFolders": "never",
    "editor.inlineSuggest.enabled": true,
    "docker.commands.attach": "${containerCommand} exec -it ${containerId} ${shellCommand}",
    "docker.commands.build": "${containerCommand} build --pull --rm -f \"${dockerfile}\" -t ${tag} \"${context}\"",
}
